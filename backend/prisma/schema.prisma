generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  user_id       Int     @id @default(autoincrement())
  email         String  @unique
  password      String
  name          String?
  otp           String?
  otpExpiry     DateTime?
  profileImgae  String?
  photo         Photo[]
}
model Photo{
  author      User      @relation(references: [user_id] , fields: [authorId])
  authorId    Int      
  photoId     Int       @id @default(autoincrement())
  title       String
  photo_url   String
  description String
  category    String
  likes       Int?      @default(0)
  saved       Int[]
}